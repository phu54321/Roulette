const pxMove = $L("pxMove"); 

function setLocationPos(locId, x, y, w, h) {
    SetMemory(0x58DC60 + 20 * locId + 0x00, SetTo, x);
    SetMemory(0x58DC60 + 20 * locId + 0x04, SetTo, y);
    SetMemory(0x58DC60 + 20 * locId + 0x08, SetTo, x + w);
    SetMemory(0x58DC60 + 20 * locId + 0x0C, SetTo, y + h);
}

function getLocationPos(locId) {
    const x0 = dwread_epd(EPD(0x58DC60) + 5 * locId + 0);
    const y0 = dwread_epd(EPD(0x58DC60) + 5 * locId + 1);
    const x1 = dwread_epd(EPD(0x58DC60) + 5 * locId + 2);
    const y1 = dwread_epd(EPD(0x58DC60) + 5 * locId + 3);
    return x0, y0, x1 - x0, y1 - y0;
}

function pxMoveTo(x, y) {
    setLocationPos(pxMove, x, y, 0, 0);
}
