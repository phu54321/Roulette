// Sound from https://www.youtube.com/watch?v=PpXCM5YKimM

function loadSounds() {
    MPQAddFile('staredit\\wav\\onRoll.ogg', py_open('res\\onRoll.ogg', 'rb').read());
    MPQAddFile('staredit\\wav\\onSelect.ogg', py_open('res\\onSelect.ogg', 'rb').read());
    MPQAddFile('staredit\\wav\\powerUp.ogg', py_open('res\\powerUp.ogg', 'rb').read());
    MPQAddFile('staredit\\wav\\reload.ogg', py_open('res\\reload.ogg', 'rb').read());
}

function broadcastSound(wavName: TrgString) {
    for(var player = 0 ; player < 6 ; player++) {
        SetCurrentPlayer(player);
        PlayWAV(wavName);
    }
}

function playRouletteRolling() {
    broadcastSound("staredit\\wav\\onRoll.ogg");
}

function playRouletteStartTicks() {
    broadcastSound("staredit\\wav\\onSelect.ogg");
}

function playRouletteCompleteSound() {
    broadcastSound("staredit\\wav\\powerUp.ogg");
}
