// Sound from https://www.youtube.com/watch?v=PpXCM5YKimM

function loadSounds() {
    MPQAddWave('staredit\\wav\\onRoll.ogg', py_open('res\\onRoll.wav', 'rb').read());
    MPQAddWave('staredit\\wav\\onSelect.ogg', py_open('res\\onSelect.wav', 'rb').read());
    MPQAddWave('staredit\\wav\\powerUp.ogg', py_open('res\\powerUp.wav', 'rb').read());
}

function playRouletteRolling() {
    for(var player = 0 ; player < 6 ; player++) {
        SetCurrentPlayer(player);
        PlayWAV("staredit\\wav\\onRoll.ogg");
    }
}

function playRouletteStartTicks() {
    for(var player = 0 ; player < 6 ; player++) {
        SetCurrentPlayer(player);
        PlayWAV("staredit\\wav\\onSelect.ogg");
    }
}
