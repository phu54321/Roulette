import betInfo;
import rouletteSound;

function onPluginStart() {
    rouletteSound.putRouletteSound();

    // Vision
    RunAIScript("Turn ON Shared Vision for Player 8");
    SetMemory(0x51CE98, SetTo, 2);  // Update vision instantly

    // Init betting locations
    betInfo.initBetLocations();

    // JYD deco
    SetCurrentPlayer(P8);
    RunAIScriptAt(b'JYDg', 'payHere');

    SetCurrentPlayer(P1);
    betInfo.applyBet(8);
}

function afterTriggerExec() {
    SetInvincibility(Enable, '(any unit)', AllPlayers, 'Anywhere');
}
